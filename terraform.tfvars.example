# Environment Configuration
environment  = "dev"
project_name = "homelab"

# Infrastructure Configuration
kubernetes_context = "docker-desktop"
domain_suffix      = "example.com"  # Change to your domain

# Cloudflare Configuration
cloudflare_account_id = ""  # Add your Cloudflare Account ID here
cloudflare_api_token  = ""  # Add your Cloudflare API Token here

# Feature Flags
enable_traefik           = false  # Disable Traefik when using Cloudflare Tunnel
enable_postgresql        = true
enable_persistence       = false
enable_coredns           = false  # Disable CoreDNS when using Cloudflare Tunnel
enable_cloudflare_tunnel = true   # Enable Cloudflare Tunnel

# Network Configuration (only needed if using CoreDNS instead of Cloudflare Tunnel)
tailscale_ip = ""  # Your Tailscale IP address

# Resource Sizing
default_cpu_limit    = "500m"
default_memory_limit = "1Gi"
default_storage_size = "10Gi"

# Zero Trust Access Control (optional - requires enabling Access in Cloudflare dashboard)
allowed_email_domains = []  # Example: ["gmail.com", "company.com"] 
allowed_emails        = []  # Example: ["user@example.com"]