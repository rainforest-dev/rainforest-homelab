<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.homelab.ttyd</string>
    <key>ProgramArguments</key>
    <array>
        <string>{{ ttyd_path.stdout }}</string>
        <string>--port</string>
        <string>{{ ttyd_port }}</string>
        <string>--interface</string>
        <string>{{ ttyd_interface }}</string>
        <string>--base-path</string>
        <string>/</string>
        <string>--writable</string>
        <string>--terminal-type</string>
        <string>xterm-256color</string>
        <string>zsh</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>/tmp/ttyd.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/ttyd.error.log</string>
    <key>WorkingDirectory</key>
    <string>{{ ansible_env.HOME }}</string>
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>HOME</key>
        <string>{{ ansible_env.HOME }}</string>
    </dict>
</dict>
</plist>